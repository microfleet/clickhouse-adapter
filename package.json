{
  "name": "clickhouse-adapter",
  "description": "ClickHouse Adapter",
  "private": true,
  "workspaces": [
    "packages/**/*",
    "test"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna run clean",
    "compile": "yarn clean && lerna run compile",
    "lint": "eslint . --ext .ts",
    "typecheck": "lerna run typecheck",
    "pretypecheck": "yarn compile",
    "format": "prettier \"**/*.ts\" --write && git status",
    "test": "yarn compile && lerna run test --stream",
    "prepublishOnly": "yarn compile",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "clickhouse",
    "adapter",
    "client"
  ],
  "devDependencies": {
    "@makeomatic/deploy": "10.1.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "@semantic-release/npm": "7.0.5",
    "@types/bluebird": "3.5.30",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/node": "13.13.4",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "commitizen": "4.0.4",
    "cross-env": "7.0.2",
    "cz-lerna-changelog": "2.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "7.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "25.4.0",
    "lerna": "3.20.2",
    "prettier": "1.19.1",
    "prettier-eslint": "10.1.1",
    "rimraf": "3.0.2",
    "ts-jest": "25.4.0",
    "ts-node": "8.9.1",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typecheck",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
